(jbuild_version 1)

(executable
 ((name esyCommand)
  (public_name esy)
  (package esy)
  (preprocess (pps (lwt_ppx ppx_let)))
  (libraries (
              lwt
              lwt.unix
              cmdliner
              logs
              logs.fmt
              logs.lwt
              logs.cli
              fmt
              fmt.cli
              fmt.tty
              str
              astring
              esy
              ))
  ))


(rule
  ((targets (esy))
   (deps    (esyCommand.bc))
   (action  (chdir ${ROOT} (run ocamlstripdebug ${<} ${@})))
   ))
